escolha = int(input('1 - Iniciar jogo \n'
                    '2 - Finalizar jogo \n'))
while True:
    if escolha == 1 :
        conexao = connector.connect(
        host='localhost',
        user='root',
        password='', 
        )
        cursor = conexao.cursor()
        # criar banco de dados
        banco_dados = "CREATE DATABASE if not exists jogo_rpg"
        cursor.execute(banco_dados)
