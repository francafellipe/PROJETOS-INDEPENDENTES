from mysql import connector
class Personagem :
    def __init__(self,nome,habilidade):
        self.nome = nome
        self.habilidade = habilidade
        

    def Lutar ():
        
        pass

class Heroi (Personagem):
    def __init__(self, nome, habilidade):
        super().__init__( nome, habilidade)
        self.nivel = 10
        self.vida = 200
        self.poder = 0
    

class Vilao (Personagem):
    def __init__(self, nome, habilidade):
        super().__init__(nome, habilidade)
        self.nivel = 5
        self.vida = 100
        self.poder = 0
